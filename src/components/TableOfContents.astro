---
interface Props {
    headings: {
        depth: number;
        slug: string;
        text: string;
    }[];
}

const { headings } = Astro.props;
---

<ul class="space-y-2 list-none m-0 p-0 text-zinc-600">
    {
        headings.map((heading) => {
            let indentClass = "";
            if (heading.depth === 3) indentClass = "ml-3";
            if (heading.depth === 4) indentClass = "ml-6";
            if (heading.depth > 4) indentClass = "ml-8";

            return (
                <li
                    class={`flex gap-3 items-start text-[14px] leading-[21px] ${indentClass}`}
                >
                    <a
                        href={`#${heading.slug}`}
                        class="hover:text-accent-600 hover:translate-x-1 transition-all duration-200 ease-in-out"
                    >
                        {heading.text}
                    </a>
                </li>
            );
        })
    }
</ul>
